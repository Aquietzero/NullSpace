#fixedbarUp
  margin-left -10px

  div
    font-family subtitleFont
    font-size 15pt
    letter-spacing 2px
    text-align center
    vertical-align middle
    width 64px
    height 64px

  a
    display block
    min-width 64px
    min-height 64px
    max-width 64px
    max-height 64px

    img
      opacity 0

  #twitter
    margin-left 15px
    background url('/media/img/twitter.png') no-repeat center
    &:hover
      background url('/media/img/twitterHover.png') no-repeat center

  #rss
    margin-left 85px
    margin-top -45px
    background url('/media/img/rss.png') no-repeat center
    &:hover
      background url('/media/img/rssHover.png') no-repeat center

  #github
    margin-left 145px
    margin-top -25px
    background url('/media/img/github.png') no-repeat center
    &:hover
      background url('/media/img/githubHover.png') no-repeat center

  #gmail
    margin-left 165px
    margin-top 5px
    background url('/media/img/gmail.png') no-repeat center
    //&:hover
    //  background url('/media/img/gmailHover.png')

  #about
    min-width 128px
    min-height 128px
    max-width 128px
    max-height 128px
    border-radius 128px
    border-top solid 1px #999999
    border-right solid 1px #999999
    text-align center
    vertical-align middle
    margin-top -90px
    margin-left 10px
    line-height 100px
    font-family subtitleFont
    font-size 25pt
    text-decoration none
    color white
    text-shadow 0 1px 1px #333333
    font-weight bold
    box-shadow -2px 2px 2px rgba(150, 150, 150, 0.5) inset, 20px -25px 20px rgba(150, 150, 150, 0.1)
    background url('/media/img/about.png') no-repeat right 

    &:hover
      text-shadow 0 1px 1px black
      box-shadow -2px 2px 2px rgba(150, 150, 150, 0.8) inset, 20px -25px 20px rgba(150, 150, 150, 0.1)
      background url('/media/img/aboutHover.png') no-repeat right 


#fixedbarDown
  height 100%
  margin-left -10px
  margin-top 0px
  padding 10px 15px
  border-top solid 1px #CCCCCC
  border-right solid 1px #CCCCCC
  border-bottom solid 1px #CCCCCC
  box-shadow 0 0 3px rgba(150, 150, 150, 0.3)
  background-color rgba(220, 220, 220, 0.1)

  .subtitle
    font-family subtitleFont
    font-size 18pt
    letter-spacing 2px
    border-bottom solid 1px #999999
    padding 0
    margin 0


  #tags
  #links
    text-align justify

    p
      margin 5px

    a
      color black
      text-decoration none

      &:hover
        color rgba(55, 0, 50, 1)
        border-bottom solid 3px rgba(55, 0, 50, 1)


