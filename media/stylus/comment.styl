.comments
  margin 0
  padding 0
  background-color transparent

  .comment
    margin 20px 0
    padding 10px 0
    overflow hidden
    -moz-border-radius-topleft 20px
    -moz-border-radius-topright 20px
    -moz-box-shadow 0 -3px 3px rgba(50, 50, 50, 0.2)
    background -moz-linear-gradient(top, rgba(250, 250, 250, 0.6), rgba(250, 250, 250, 0))

    .commentLeft
      float left
      width 15%
      color #333333

      .commentGravatar
        margin 0 auto
        padding 10px
        padding-bottom 0
        width 60px
        text-align center

        .gravatar
          width 70%
          -moz-box-shadow 0 0 2px #666666
          -moz-border-radius-topleft 10px
          -moz-border-radius-bottomright 10px
          -moz-border-radius-topright 2px
          -moz-border-radius-bottomleft 2px

      .commentVisitor
        margin 0 auto
        text-align center
        font-family sans-serif
        text-shadow 0 -1px 1px white

    .commentRight
      float left
      width 80%
      margin 0 auto

      .commentCreated
        margin 0 auto
        text-align right
        border-bottom solid 1px #BBBBBB
        font-size 0.8em
        font-family sans-serif
        color #999999

      .commentContent
        margin 0 auto
        padding 10px 0
        color #444444
