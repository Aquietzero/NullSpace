.comments
  margin 0
  padding 0
  background-color transparent

  .comment
    margin 20px 0
    padding 10px 0
    overflow hidden
    -moz-border-radius-topleft 20px
    -moz-border-radius-topright 20px
    -moz-box-shadow 0 -3px 3px rgba(50, 50, 50, 0.2)
    background -moz-linear-gradient(top, rgba(250, 250, 250, 0.6), rgba(250, 250, 250, 0))

    .commentLeft
      float left
      width 15%
      color #333333

      .commentGravatar
        margin 0 auto
        padding 10px
        padding-bottom 0
        width 60px
        text-align center

        .gravatar
          width 70%
          -moz-box-shadow 0 0 2px #666666
          -moz-border-radius-topleft 10px
          -moz-border-radius-bottomright 10px
          -moz-border-radius-topright 2px
          -moz-border-radius-bottomleft 2px

      .commentVisitor
        margin 0 auto
        text-align center
        font-family sans-serif
        text-shadow 0 -1px 1px white

    .commentRight
      float left
      width 80%
      margin 0 auto

      .commentCreated
        margin 0 auto
        text-align right
        border-bottom solid 1px #BBBBBB
        font-size 0.8em
        font-family sans-serif
        color #999999

      .commentContent
        margin 0 auto
        padding 10px 0
        color #444444

.leaveCommentButton
    margin 0
    padding 0
    overflow hidden

    p
      width 25%
      text-align center
      float right
      margin 0
      padding 5px
      -moz-border-radius-topleft 50px
      -moz-border-radius-bottomright 50px
      background-color #BBBBBB
      font-weight bold
      color white
      text-shadow 0 1px 1px #666666

      &:hover
        cursor pointer
        color #990033

.leaveComment

  hr
    margin 0
    margin-top -2px
    padding 0
    width 95%
    border none
    border-bottom solid 0.5px #BBBBBB

  p
    padding 0

  label
    margin 0
    padding 4px
    display inline-block
    float left
    width 80px
    height 100%
    font-weight bold
    text-align center
    -moz-border-radius-topleft 30px
    color white 
    background-color #BBBBBB
    border solid 1px #BBBBBB
    text-shadow 0 1px 1px #666666

  input[type="text"]
    border none
    padding 2.5px 8px
    color #666666
    background-color rgba(255, 255, 255, 0.7)
    font-size 1.1em
    -moz-border-radius-bottomright 30px
    -moz-box-shadow 10px 0 5px rgba(50, 50, 50, 0.1)

    &:hover
    &:focus
      background-color rgba(255, 255, 255, 0.8)

  textarea
    color #666666
    min-width 95%
    max-width 95%
    padding 10px 20px
    border none
    background -moz-linear-gradient(top, rgba(250, 250, 250, 0.6), rgba(250, 250, 250, 0))
    -moz-border-radius-topleft 20px
    -moz-border-radius-topright 20px
    -moz-box-shadow 0 -3px 3px rgba(50, 50, 50, 0.2)

  input[type="submit"]
    color #666666
    border none
    background transparent
    font-weight bold
    position relative
    bottom 30px
    right -580px 

    &:hover
      cursor pointer
      text-shadow 0 0 2px #999999
