#sidebar 

  margin 0
  padding 0
  border-right solid 15px black
  -moz-box-shadow: 0 0 5px black

  .sidebarTitle
    font-size 12pt
    font-weight bold
    text-shadow 0 1px 1px #CCCCCC
    margin 20px auto 0 auto
    padding 5px 20px
    background -moz-linear-gradient(top, rgba(250, 250, 250, 0.6), rgba(250, 250, 250, 0.2))
    -moz-border-radius-bottomleft 20px
    border-bottom solid 1px rgba(50, 50, 50, 0.7)
  
  .month
  .category
    list-style-type none
    border-bottom solid 1px rgba(50, 50, 50, 0.7)
    -moz-border-radius-bottomleft 50px
    -moz-box-shadow 0 10px 10px rgba(50, 50, 50, 0.2) 
    background -moz-linear-gradient(top, rgba(250, 250, 250, 0.6), rgba(250, 250, 250, 0.2))
    padding 4px 35px
    margin 0
    text-shadow 0 1px 1px #CCCCCC

  .year
    font-weight bold
    list-style-type none
    text-align right
    background -moz-linear-gradient(left, rgba(250, 250, 250, 0.0), rgba(50, 50, 50, 0.3))

  .archieves
  .categories
    margin 0 auto 10px 20px 
    padding-left 20px
    padding-bottom 20px
    border-left solid 1px rgba(100, 100, 100, 0.3)
    -moz-border-radius-bottomleft 20px
    -moz-border-radius-topleft 5px
    -moz-box-shadow 0 5px 5px #666666

