.archievePage
  overflow hidden

.archieveTitle
  float left
  width 30%
  text-align right
  font-size 40pt
  font-family archieveFont
  font-weight bold
  color #CCCCCC
  margin-left 30px
  margin-right -30px
  letter-spacing -3px

.archieve
  float left
  width 50%

  .years
    list-style-type none

    .year
      background url('/media/img/flower.png') no-repeat
      background-position -20px -20px
      padding 10px 20px

      p
        font-size 12pt
        margin 0
        padding 5px
        color #333333
        text-shadow 0 0 1px black

  .months
    list-style-type none

    .month
      border-left solid 5px rgba(200, 200, 200, 0)

      p
        margin 0
        padding 2px 10px
        font-size 10pt
        color #444444
        text-shadow none

      &:hover
        cursor pointer
        border-left solid 5px rgba(155, 0, 50, 0.3)

  .postTitles
    display none 
    list-style-type none

    .postTitle
      a
        color #666666
        text-decoration none

        &:hover
          text-decoration underline

    .postCreated
      display inline
      color rgba(155, 0, 50, 0.5)
      font-size 0.8em
      font-style italic
